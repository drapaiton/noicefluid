{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "CeleryWorker",
            "request": "launch",
            "module": "celery",
            "args": [
                "worker",
                "--workdir",
                "src/",
                "--app",
                "noicefluid.celery.app",
                "--loglevel",
                "info"
            ],
            "type": "python",
            "console": "internalConsole"
        },
        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "args": [
                "runserver",
                "9000"
            ],
            "django": true,
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Webserver",
            "configurations": [
                "Django",
                "CeleryWorker",
            ]
        }
    ]
}